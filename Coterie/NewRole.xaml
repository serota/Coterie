<Window x:Name="newRoleWindow" x:Class="Coterie.NewRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coterie"
        mc:Ignorable="d"
        Title="New Role" Height="146.296" Width="249.919"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Please enter the name of your new role." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameField" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224" TextChanged="nameField_TextChanged"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="159,86,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="cancelButton_Click"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="79,86,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="okButton_Click"/>

    </Grid>
</Window>
